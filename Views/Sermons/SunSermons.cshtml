@{
    ViewBag.Title = "Sermons";
}
<div class="nav-backed-header parallax" style=" background-image:url(); ">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <ol class="breadcrumb">
                    <!-- Breadcrumb NavXT 7.2.0 -->
                    <li class="home">
                        <span property="itemListElement" typeof="ListItem">
                            <h3 style="color:white;" class="post-title">Sermons</h3>
                        </span>
                    </li>

                </ol>
            </div>
        </div>
    </div>
</div>
<!-- Start Content -->
<div class="main" role="main">
    <div id="content" class="content full">
        <div class="container">
            <div class="row">

                <div class="col-md-6 col-lg-8 col-sm-12">
                    <div class="listing post-listing" id="watchVideo">
                        <header class="listing-header">
                            <h3>Watch Sermon</h3>
                        </header>
                        <section class="listing-contcol-sm-12">
                            <div class="plyr__video-wrapper plyr__video-embed" style="aspect-ratio: 16 / 9;">
                                <iframe id="youtube-8972" frameborder="0" allowfullscreen="" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" title="" width="640" height="360" src="https://www.youtube.com/embed/@ViewBag.DefaultVideo?autoplay=1&origin=http://example.com"></iframe>
                            </div>



                        </section>
                        <hr />
                        <div   style="background-color:lightgray; border-radius:6px">
                            <h4 id="mvideoDesc" style="padding:10px"><strong>@ViewBag.DefaultVideoTitle</strong> <br /><br /> @ViewBag.DefaultVideoDesc</h4>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-4 col-sm-12">
                    <div class="listing post-listing">
                        <header class="listing-header">
                            <h3>Sunday Sermons</h3>
                        </header>
                        <section class="listing-cont">
                            <ul>
                                @foreach (var sermon in Model)
                                {
                                    <li class="item post">
                                        <div class="row">
                                            <div class="col-md-4"> <a onclick="playYTVideo('@sermon.VideoId')" href="#watchVideo" class="media-box"> <img src="@sermon.ThumbNailPath" srcset="" alt="" class="img-thumbnail"> </a></div>
                                            <div class="col-md-8">
                                                <div class="">
                                                    <p style="font-size:x-small">@sermon.Title <br /><span class=""><i class="fa fa-calendar"></i>&nbsp; on @sermon.PostedOn &nbsp; </span></p>
                                                </div>
                                                <p id=@("desc"+sermon.VideoId) name="custId" hidden="hidden"> <strong >@sermon.Title</strong> <br /><br /> @sermon.Description  </p>
                                            </div>
                                        </div>
                                    </li>
                                }

                            </ul>
                        </section>
                    </div>
                </div>


                <ul class="pagination">
                    <li><a href="https://www.youtube.com/watch?v=a-WFtXAwjsg&list=PLh7ruzA6zb1TPU4fO6r9sxbATJelIKQvO" target="_blank"><i class="fa fa-chevron-right"></i>Watch More</a></li>
                    @*<li class="active"><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                    <li><a href="#"><i class="fa fa-chevron-right"></i></a></li>*@
                </ul>
            </div>
            <!-- Start Sidebar -->

        </div>
    </div>
</div>


<script type="text/javascript">
    function playYTVideo(videoId) {

        $("#youtube-8972").attr('src', 'https://www.youtube.com/embed/' + videoId + '?autoplay=1&origin=http://example.com');
       

        $("#mvideoDesc").html($("#desc" + videoId).html())
    }
</script>
